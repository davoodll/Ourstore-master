@model OurStore.Model.Order
@{
    ViewBag.Title = "Complete";
}

<h2 style="color:white;">Checkout Complete</h2>
<br />
<p style="color:white;">Thank you for your order!</p> 
<p style="color:white;"><b>Your orderid is: @Model.OrderId</b></p>
<br />
<p style="color:white;">Username: @Model.Username</p>
<p style="color:white;">Userid: @Model.UserId</p>
<br />
<p style="color:white;">Total payed amount: @Model.Total kr</p>
<p style="color:white;">Time of order: @Model.OrderDate</p>
<br />
<p style="color:white;"><b>Order Details:</b></p>
<table class="table" style="color:white;">
    <tbody>
        <tr>
            <td><b>Product Name:</b></td>
            <td><b>Price (pr. unit)</b></td>
            <td><b>Quantity</b></td>
        </tr>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice) kr
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
        <tr>
            <td>
                <b>Total:</b>
            </td>
            <td></td>
            <td align="right"><b>@Model.Total kr</b></td>
        </tr>
    </tbody>
</table>

<p style="color:white;">Shipping information:</p>
<p style="color:white;">@Model.FirstName @Model.LastName</p>
<p style="color:white;">@Model.Address</p>
<p style="color:white;">@Model.PostalCode, @Model.City</p>
<p style="color:white;">Contact number: @Model.Phone</p>
<br />
<p style="color:white;">E-mail with reciept will be sent to: @Model.Email</p>
<br />
<br />
<p style="color:white;">
    Still want more? How about shopping for some more in our @Html.ActionLink("store", "Index", "Home")!
</p>

