@model OurStore.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<br />
<h2 style="color:white;">Welcome to your page, @User.Identity.Name</h2>

<br />
<p class="text-success" style="color:white;">@ViewBag.StatusMessage</p>
<div>
    <h4 style="color:white;">What would you like to do?</h4>
    <hr />
    <dl class="dl-horizontal" style="color:white;">
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
        </dd>
        <dt>Order History:</dt>
        <dd>@Html.ActionLink("See Order History", "OrderHistory")</dd>
        <dt>My Account Details:</dt>
        <dd>@Html.ActionLink("Edit Account Information", "ChangeInformation")</dd>
        <dt>Log out:</dt>
        <dd>
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                }
            }
        </dd>
