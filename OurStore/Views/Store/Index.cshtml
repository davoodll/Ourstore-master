@model IEnumerable<OurStore.Model.Category>
@using OurStore.Model;
@{
    ViewBag.Title = "Index";
}


               <div style="text-align:left; background: none repeat scroll 0 0 #FFFFFF; height: 635px; min-width: 1100px; float: left; /* font-family: arial,helvetica,sans-serif; */ color: #5C5B5B;">
                          <h3 style="margin-left: 40%; margin-top: 5%; ">Categories</h3>
                   <p style="color:white;">
                       Select from @Model.Count()
                       genres:
                   </p>

                          <div style="float:right; clear: right; width: 75%; display: inline; height: 50px; list-style: none outside none; margin: 20px 20px 0; padding: 0 5px; font-size: 16px;">

                              <ul style="margin:0; padding: 0; border: 0; outline: 0; vertical-align: baseline; background: transparent; color: #4d4d4f; font-family: Perpetua, serif; letter-spacing: 1px; }">
                                  @foreach (var category in Model)
                                  {
                                      <li style="float:left; list-style: none outside none; padding: 7px 22px; margin-right: 10px; font-size: 1.1em; line-height: 17px;">@Html.ActionLink(category.Name, "Browse", new { category = category.Name })</li>
                                  }
                              </ul>
                          </div>
                          <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-top:7%;">
                              <!-- Indicators -->
                              <ol class="carousel-indicators">
                                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                  <li data-target="#myCarousel" data-slide-to="1"></li>
                                  <li data-target="#myCarousel" data-slide-to="2"></li>
                              </ol>
                              <div class="carousel-inner" style="">
                                  <div class="item active">
                                      <img src="/Content/images/veske1.png" alt="First slide">
                                      <div class="container">
                                          <div class="carousel-caption">
                                              <h1></h1>

                                          </div>
                                      </div>
                                  </div>
                                  <div class="item">
                                      <img src="/Content/images/veske2.png" alt="Second slide">
                                      <div class="container">
                                          <div class="carousel-caption">
                                              <h1></h1>

                                          </div>
                                      </div>
                                  </div>
                                  <div class="item">
                                      <img src="/Content/images/veske3.png" alt="Third slide">
                                      <div class="container">
                                          <div class="carousel-caption">
                                              <h1></h1>

                                          </div>
                                      </div>
                                  </div>
                              </div>
                              <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
                              <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
                          </div><!-- /.carousel -->

                      </div>
